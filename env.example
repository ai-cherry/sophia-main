# SOPHIA AI System - Environment Variables Example
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=60

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400  # 24 hours in seconds
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=sophia
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sophia

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# Vector Databases
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX=sophia-index

WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MCP Server
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8002

# Mem0 Persistent Memory
MEM0_URL=http://mem0:8000

# Estuary Flow
ESTUARY_API_KEY=your_estuary_api_key_here
ESTUARY_API_URL=https://api.estuary.dev

# Integrations
# HubSpot
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here

# Salesforce
SALESFORCE_USERNAME=your_salesforce_username_here
SALESFORCE_PASSWORD=your_salesforce_password_here
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token_here
SALESFORCE_DOMAIN=login  # login or test

# Gong
GONG_API_KEY=your_gong_api_key_here
GONG_API_SECRET=your_gong_api_secret_here
GONG_ACCESS_KEY=your_gong_access_key_here

# Slack
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_APP_TOKEN=your_slack_app_token_here

# Snowflake
SNOWFLAKE_ACCOUNT=your_snowflake_account_here
SNOWFLAKE_USER=your_snowflake_user_here
SNOWFLAKE_PASSWORD=your_snowflake_password_here
SNOWFLAKE_WAREHOUSE=your_snowflake_warehouse_here
SNOWFLAKE_DATABASE=your_snowflake_database_here
SNOWFLAKE_SCHEMA=your_snowflake_schema_here
SNOWFLAKE_ROLE=your_snowflake_role_here

# Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp
GRAFANA_ADMIN_PASSWORD=sophia_admin

# Deployment
DEPLOY_CLOUD_INFRA=false
PULUMI_ACCESS_TOKEN=your_pulumi_access_token_here
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
