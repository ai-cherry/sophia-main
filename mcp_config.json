{
  "servers": [
    {
      "name": "snowflake-mcp",
      "description": "MCP server for Snowflake integration",
      "url": "http://localhost:8000/snowflake",
      "tools": [
        {
          "name": "query",
          "description": "Execute a SQL query on Snowflake",
          "input_schema": {
            "type": "object",
            "properties": {
              "query": {
                "type": "string",
                "description": "SQL query to execute"
              },
              "warehouse": {
                "type": "string",
                "description": "Snowflake warehouse to use",
                "default": "${SNOWFLAKE_WAREHOUSE}"
              }
            },
            "required": ["query"]
          }
        },
        {
          "name": "list_tables",
          "description": "List tables in a schema",
          "input_schema": {
            "type": "object",
            "properties": {
              "schema": {
                "type": "string",
                "description": "Schema name",
                "default": "${SNOWFLAKE_SCHEMA}"
              }
            }
          }
        }
      ],
      "resources": [
        {
          "uri": "schemas",
          "description": "List of available schemas"
        },
        {
          "uri": "tables",
          "description": "List of available tables"
        }
      ]
    },
    {
      "name": "gong-mcp",
      "description": "MCP server for Gong integration",
      "url": "http://localhost:8001/gong",
      "tools": [
        {
          "name": "list_calls",
          "description": "List recent calls",
          "input_schema": {
            "type": "object",
            "properties": {
              "from_date": {
                "type": "string",
                "description": "Start date (YYYY-MM-DD)",
                "format": "date"
              },
              "to_date": {
                "type": "string",
                "description": "End date (YYYY-MM-DD)",
                "format": "date"
              },
              "limit": {
                "type": "integer",
                "description": "Maximum number of calls to return",
                "default": 10
              }
            }
          }
        },
        {
          "name": "get_call_transcript",
          "description": "Get transcript for a call",
          "input_schema": {
            "type": "object",
            "properties": {
              "call_id": {
                "type": "string",
                "description": "Call ID"
              }
            },
            "required": ["call_id"]
          }
        }
      ],
      "resources": [
        {
          "uri": "users",
          "description": "List of Gong users"
        },
        {
          "uri": "stats",
          "description": "Gong usage statistics"
        }
      ]
    },
    {
      "name": "vercel-mcp",
      "description": "MCP server for Vercel integration",
      "url": "http://localhost:8002/vercel",
      "tools": [
        {
          "name": "list_deployments",
          "description": "List recent deployments",
          "input_schema": {
            "type": "object",
            "properties": {
              "project_id": {
                "type": "string",
                "description": "Project ID",
                "default": "${VERCEL_PROJECT_ID}"
              },
              "limit": {
                "type": "integer",
                "description": "Maximum number of deployments to return",
                "default": 10
              }
            }
          }
        },
        {
          "name": "create_deployment",
          "description": "Create a new deployment",
          "input_schema": {
            "type": "object",
            "properties": {
              "project_id": {
                "type": "string",
                "description": "Project ID",
                "default": "${VERCEL_PROJECT_ID}"
              },
              "target": {
                "type": "string",
                "description": "Deployment target",
                "enum": ["production", "preview"],
                "default": "preview"
              }
            },
            "required": ["project_id"]
          }
        }
      ],
      "resources": [
        {
          "uri": "projects",
          "description": "List of Vercel projects"
        },
        {
          "uri": "domains",
          "description": "List of Vercel domains"
        }
      ]
    },
    {
      "name": "estuary-mcp",
      "description": "MCP server for Estuary integration",
      "url": "http://localhost:8003/estuary",
      "tools": [
        {
          "name": "list_collections",
          "description": "List collections",
          "input_schema": {
            "type": "object",
            "properties": {
              "limit": {
                "type": "integer",
                "description": "Maximum number of collections to return",
                "default": 10
              }
            }
          }
        },
        {
          "name": "upload_file",
          "description": "Upload a file to Estuary",
          "input_schema": {
            "type": "object",
            "properties": {
              "file_path": {
                "type": "string",
                "description": "Path to the file to upload"
              },
              "collection": {
                "type": "string",
                "description": "Collection to upload to",
                "default": "default"
              }
            },
            "required": ["file_path"]
          }
        }
      ],
      "resources": [
        {
          "uri": "stats",
          "description": "Estuary usage statistics"
        },
        {
          "uri": "pins",
          "description": "List of pinned content"
        }
      ]
    }
  ]
}
